<!DOCTYPE html>
<html lang="en">
   <head>
    {{!-- partials header --}}
      {{> _header}}
   </head>
   <body id="page-top">

       {{!-- partials sidebar --}}
        {{> _sidebar}}

        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

        {{!-- partials topbar --}}
         {{> _topbar}}

               <!-- Begin Page Content -->
            <div class="container-fluid">
               <form action="/register" method="POST" id="newuserForm">
                  <div class="row justify-content-center">
                     <!-- Border Left Utilities -->
                     <div class="col-lg-8">
                        <a class="btn btn-secondary mb-3" href="/users" role="button"> <i class="fas fa-arrow-circle-left"></i> Back</a>
                        <div class="card my-1 mb-5 border-left-secondary">
                           <div class="card-header">
                              <h4 class="mt-2"> <i class="fa fa-user fa-sm"></i> User Profile 
                                 <div class="custom-control custom-switch" style="float: right;">
                                 <input type="checkbox" class="custom-control-input" id="customSwitch">
                                 <label class="custom-control-label" id="switchLabel" for="customSwitch">Edit</label>
                                 </div>
                              </h4>

                           </div>
                            <div class="card-body">
                              <div class="row">
                                 <div class="col-lg-6">
                                    <div class="form-group">
                                       <label for="exampleInputEmail1">First Name</label>
                                       <input value="{{user.firstname}}" type="text" class="form-control update-form" name="firstname" id="firstname" pattern="[A-Za-z ]{0,}" title="Only Alphabets" aria-describedby="FirstName" autocomplete="off" maxlength="50" required disabled>
                                    </div>
                                    <div class="form-group">
                                       <label>Middle Name</label>
                                       <input value="{{user.middlename}}" type="text"  class="form-control update-form" name="middlename" id="middlename"  pattern="[A-Za-z ]{0,}" title="Only Alphabets" maxlength="25" autocomplete="off" disabled>
                                    </div>
                                    <div class="form-group">
                                       <label>Last Name</label>
                                       <input value="{{user.lastname}}" type="text"  class="form-control update-form" name="lastname" id="lastname" pattern="[A-Za-z ]{0,}" title="Only Alphabets" maxlength="25" autocomplete="off" required disabled>
                                    </div>
                                    <div class="row">
                                       <div class="col-lg-6">
                                          <div class="form-group">
                                             <label class="pb-1">Gender</label><br>
                                             <label class="radio-inline pl-4">
                                             <input class="update-form" type="radio" name="gender" value="Male" checked="({{user.gender}} == 'Male' ? true : false )" required disabled
                                             > Male
                                             </label>
                                             <label class="radio-inline pl-4">
                                             <input class="update-form" type="radio" name="gender" value="Female"  checked="({{user.gender}} == 'Female' ? true : false )" required disabled
                                             > Female
                                             </label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="form-group">
                                             <label>Age</label>
                                             <input value="{{user.age}}" type="number" class="form-control update-form" name="age" id="age" onkeydown="javascript: return event.keyCode == 69 ? false : true && event.keyCode == 189 ? false : true && event.keyCode == 109 ? false : true && event.keyCode == 107 ? false : true && event.keyCode == 187 ? false : true && event.keyCode == 190 ? false : true && event.keyCode == 110 ? false : true"  min="18" max="60" autocomplete="off" required disabled>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                                 <div class="col-lg-6">
                                    <div class="row">
                                       <div class="col-lg-6">
                                          <div class="form-group">
                                             <label>Birthdate</label>
                                             <input value="{{user.birthdate}}" type="date" class="form-control update-form" name="birthdate" id="birthdate" required disabled>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="form-group">
                                             <label>Contact Number</label>
                                             <input value="{{user.contact_number}}" type="number" class="form-control update-form" name="contact_number" id="contactnumber" onkeydown="javascript: return event.keyCode == 69 ? false : true && event.keyCode == 189 ? false : true && event.keyCode == 109 ? false : true && event.keyCode == 107 ? false : true && event.keyCode == 187 ? false : true && event.keyCode == 190 ? false : true && event.keyCode == 110 ? false : true"  maxlength="15" autocomplete="off" required disabled>
                                          </div>
                                       </div>
                                    </div>
                                    <div class="form-group">
                                       <label>Email Address</label>
                                       <input value="{{user.email_address}}" type="email" class="form-control update-form" name="email_address" id="email" autocomplete="off" required disabled>
                                    </div>
                                    <div class="form-group">
                                       <label>Home Address</label>
                                       <textarea class="form-control update-form" name="home_address" id="homeaddress" rows="3" maxlength="150" autocomplete="off" required disabled
                                          oninvalid="this.setCustomValidity('Please Enter your Address here')"
                                          oninput="this.setCustomValidity('')">{{user.home_address}}</textarea>
                                    </div>
                                 </div>
                              </div>
                              <hr>
                              <div class="row">
                                 <div class="col-lg-4">
                                    <div class="form-group">
                                       <label>ID Number</label>
                                       <input value="{{user.idnumber}}" type="number" class="form-control update-form" name="idnumber" id="idnumber" onkeydown="javascript: return event.keyCode == 69 ? false : true && event.keyCode == 189 ? false : true && event.keyCode == 109 ? false : true && event.keyCode == 107 ? false : true && event.keyCode == 187 ? false : true && event.keyCode == 190 ? false : true && event.keyCode == 110 ? false : true"  aria-describedby="idnumber" required disabled>
                                    </div>
                                 </div>
                                 <div class="col-lg-4">
                                    <div class="form-group">
                                       <label for="exampleInputEmail1">Department</label>
                                       <select class="form-control update-form" name="department" id="department" required disabled>
                                          {{#select user.department}}
                                             <option value="" disabled>Choose Department</option>
                                             <option value="1">Industrial Technology</option>
                                             <option value="2">Industrial Education</option>
                                             <option value="3">Electrical Engineering Technology</option>
                                             <option value="4">Civil Engineering Technology</option>
                                             <option value="5">Computer Science</option>
                                          {{/select}}
                                       </select>
                                    </div>
                                 </div>
                                 <div class="col-lg-4">
                                    <div class="form-group">
                                       <label for="exampleInputEmail1">Shift</label>
                                       <select class="form-control update-form" name="shift" id="shift" required disabled>
                                          {{#select user.shift}}
                                          <option value="" disabled>Choose Shift</option>
                                          <option value="day">Day</option>
                                          <option value="night">Night</option>
                                          {{/select}}
                                       </select>
                                    </div>
                                 </div>

                                 <div class="col-12">
                                    <div class="form-group mt-3">
                                       <input  class="btn btn-success btn-update" type="submit" value="Add New User">
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
               </form>
               </div>
            </div>
            <!-- End of Main Content -->

         </div>
         <!-- End of Content Wrapper -->

      </div>
      <!-- End of Page Wrapper -->

      <!-- Scroll to Top Button-->
      <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
      </a>

      {{!-- partials logout modal --}}
      {{> _logoutmodal}}

    {{!-- partials footer --}}
      {{> _footer}}

   <script>
      const customSwitch = document.querySelector("#customSwitch");
      const updateBtn = document.querySelector(".btn-update");
      const updateForm = document.querySelectorAll(".update-form");
      
      updateBtn.style.display = "none";

      customSwitch.addEventListener("change", (e) => {
         console.log(updateForm);
         const event = e.target.checked;
         
         if (event == true) {
            
            updateBtn.style.display = "block";

            for (let i=0; i < updateForm.length; i++) {
               updateForm[i].removeAttribute("disabled");
            }
         }
         else{
            updateBtn.style.display = "none";
            for (let i=0; i < updateForm.length; i++) {
               updateForm[i].setAttribute("disabled", true);
            }
         }
      }); 
   </script>
      
   </body>
</html>