<!DOCTYPE html>
<html lang="en">
   <head>
      {{!-- partials header --}}
      {{> _header}}
   </head>
   <body id="page-top" onload="timeCount();">
      {{!-- partials sidebar --}}
      {{> _sidebar}}
      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
         <!-- Main Content -->
         <div id="content">
            {{!-- partials topbar --}}
            {{> _topbar}}
            <!-- Begin Page Content -->
            <div class="container-fluid">
               <!-- Content Row -->
               <div class="row justify-content-center">
                  <!-- Border Bottom Utilities -->
                  <div class="col-lg-6">
                     <div class="card mb-4 py-3 border-bottom-dark">
                        <div class="card-body">
                           <h2>Employees</h2>
                           <i class="fas fa-users fa-3x"> {{employees}}</i>
                        </div>
                     </div>
                     
                     <div class="card mb-4 py-3 border-bottom-dark">
                        <div class="card-body">
                           <h2>Day Shift</h2>
                           <i class="fas fa-cloud-sun fa-3x"> {{day}}</i>
                        </div>
                     </div>
                     <div class="card mb-4 py-3 border-bottom-dark">
                        <div class="card-body">
                           <h2>Active</h2>
                           <i class="fas fa-user-check fa-3x"> {{active}}</i>
                        </div>
                     </div>
                     <div class="card mb-4 py-3 border-bottom-dark">
                        <div class="card-body">
                           <h2>Late</h2>
                           <i class="fas fa-bed fa-3x"></i>
                        </div>
                     </div>
                  </div>
                  <!-- Border Bottom Utilities -->
                  <div class="col-lg-6">
                     <div class="card bg-dark mb-4 py-3 border-bottom-dark">
                        <div class="card-body">
                           <h2 class="iconWhite">Date | Time</h2>
                            <div> <i class="fas fa-clock fa-3x iconWhite"> <span id="timeAdmin" class="font"> </span></i></div>
                        </div>
                     </div>
                     <div class="card mb-4 py-3 border-bottom-dark">
                        <div class="card-body">
                           <h2>Night Shift</h2>
                           <i class="fas fa-cloud-moon fa-3x"> {{night}}</i>
                        </div>
                     </div>
                     <div class="card mb-4 py-3 border-bottom-dark">
                        <div class="card-body">
                           <h2>Idle</h2>
                           <i class="fas fa-user-times fa-3x"> {{done}}</i>
                        </div>
                     </div>
                     <div class="card mb-4 py-3 border-bottom-dark">
                        <div class="card-body">
                           <h2>Under Time</h2>
                           <i class="fas fa-clock fa-3x">  </i>
                        </div>
                     </div>
                  </div>
               </div>
            </div>
            <!-- /.container-fluid -->
         </div>
         <!-- End of Main Content -->
      </div>
      <!-- End of Content Wrapper -->
      </div>
      <!-- End of Page Wrapper -->
      <!-- Scroll to Top Button-->
      <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
      </a>
      {{!-- partials logout modal --}}
      {{> _logoutmodal}}
      {{!-- partials footer --}}
      {{> _footer}}

      <script>
         
         	function timeCount() {
               var today = new Date();

               var day = today.getDate();
               var month = today.getMonth()+1;
               var year = today.getFullYear();

               var hour = today.getHours();
               if(hour<10)hour = "0"+hour;

               var minute = today.getMinutes();
               if(minute<10)minute = "0"+minute;

               var second = today.getSeconds();
               if(second<10)second = "0"+second;

               document.getElementById("timeAdmin").textContent = month+"/"+day+"/"+year+" | "+hour+":"+minute+":"+second;

			setTimeout("timeCount()", 1000);
		}
      </script>
   </body>
</html>