<!DOCTYPE html>
<html lang="en">
   <head>
      {{!-- partials header --}}
      {{> _header}}
   </head>
   <body id="page-top">
      {{!-- partials sidebar --}}
      {{> _sidebar}}
      <!-- Content Wrapper -->
      <div id="content-wrapper" class="d-flex flex-column">
         <!-- Main Content -->
         <div id="content">
            {{!-- partials topbar --}}
            {{> _topbar}}
            <!-- Begin Page Content -->
            <div class="container-fluid">
               <!-- Page Heading -->
               <h2>User Logs</h2>
               <!-- DataTales Example -->
               <div class="card shadow mb-4">
                  <div class="card-body">
                     <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                           <thead>
                              <tr>
                                 <th>ID #</th>
                                 <th>Name</th>
                                 <th>Shift</th>
                                 <th>Status</th>
                                 <th>Time-in</th>
                                 <th>Time-out</th>
                                 <th>Late</th>
                                 <th>Date</th>
                              </tr>
                           </thead>
                           <tfoot>
                              <tr>
                                 <th>ID #</th>
                                 <th>Name</th>
                                 <th>Shift</th>
                                 <th>Status</th>
                                 <th>Time-in</th>
                                 <th>Time-out</th>
                                 <th>Late</th>
                                 <th>Date</th>
                              </tr>
                           </tfoot>
                           <tbody>
                              {{#if logs}}
                              {{#each logs}}
                              <tr>
                                 <td><a href="/users/{{user_id}}"><strong><i class="fa fa-user"></i> {{idnumber}}</strong></a></td>
                                 <td>{{name}}</td>
                                 <td>{{status}}</td>
                                 <td>{{time_in}}</td>
                                 <td>{{time_out}}</td>
                                  <td></td>
                                 <td>{{date}}</td>
                              </tr>
                              {{/each}}
                              {{/if}}
                           </tbody>
                        </table>
                     </div>
                  </div>
               </div>
            </div>
            <!-- /.container-fluid -->
         </div>
         <!-- End of Main Content -->
      </div>
      <!-- End of Content Wrapper -->
      </div>
      <!-- End of Page Wrapper -->
      <!-- Scroll to Top Button-->
      <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
      </a>
      {{!-- partials logout modal --}}
      {{> _logoutmodal}}
      {{!-- partials footer --}}
      {{> _footer}}
   </body>
</html>