         <!-- Main Content -->
         <div id="content">
            {{!-- partials topbar --}}
            {{> _topbar}}
            <!-- Begin Page Content -->
            <div class="container-fluid">
               <form id="registerNewUserForm">
                  <div class="row justify-content-center">
                     <!-- Border Left Utilities -->
                     <div class="col-lg-8">
                        <a class="btn btn-secondary mb-3" href="/users" role="button"> <i class="fas fa-arrow-left"></i></a>
                        <div class="card my-1 mb-5 border-left-secondary">
                           <div class="card-header">
                              <h4 class="mt-2"> <i class="fas fa-user-plus fa-sm"></i> Register New User</h4>
                           </div>
                           <div class="card-body">
                              <div class="row">
                                 <div class="col-lg-6">
                                    <div class="form-group">
                                       <label for="exampleInputEmail1">First Name</label>
                                       <input type="text" class="form-control capitalize" name="firstname" id="firstname" pattern="[A-Za-z ]{0,}" title="Only Alphabets" aria-describedby="FirstName" autocomplete="off" maxlength="50" required>
                                    </div>
                                    <div class="form-group">
                                       <label>Middle Name</label>
                                       <input  type="text" class="form-control capitalize" name="middlename" id="middlename"  pattern="[A-Za-z ]{0,}" title="Only Alphabets" maxlength="25" autocomplete="off">
                                    </div>
                                    <div class="form-group">
                                       <label>Last Name</label>
                                       <input type="text" class="form-control capitalize" name="lastname" id="lastname" pattern="[A-Za-z ]{0,}" title="Only Alphabets" maxlength="25" autocomplete="off" required>
                                    </div>
                                    <div class="row">
                                       <div class="col-lg-6">
                                          <div class="form-group">
                                             <label class="pb-1">Gender</label><br>
                                             <label class="radio-inline pl-4">
                                             <input type="radio" name="gender" value="male" required
                                                > Male
                                             </label>
                                             <label class="radio-inline pl-4">
                                             <input type="radio" name="gender" value="female" required
                                                > Female
                                             </label>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="form-group">
                                             <label>Age</label>
                                             <input type="number" class="form-control" name="age" id="age" onkeydown="javascript: return event.keyCode == 69 ? false : true && event.keyCode == 189 ? false : true && event.keyCode == 109 ? false : true && event.keyCode == 107 ? false : true && event.keyCode == 187 ? false : true && event.keyCode == 190 ? false : true && event.keyCode == 110 ? false : true"  min="18" max="60" autocomplete="off" required>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                                 <div class="col-lg-6">
                                    <div class="row">
                                       <div class="col-lg-6">
                                          <div class="form-group">
                                             <label>Birthdate</label>
                                             <input type="date" class="form-control" name="birthdate" id="birthdate" required>
                                          </div>
                                       </div>
                                       <div class="col-lg-6">
                                          <div class="form-group">
                                             <label>Contact Number</label>
                                             <input type="number" class="form-control" name="contact_number" id="contactnumber" onkeydown="javascript: return event.keyCode == 69 ? false : true && event.keyCode == 189 ? false : true && event.keyCode == 109 ? false : true && event.keyCode == 107 ? false : true && event.keyCode == 187 ? false : true && event.keyCode == 190 ? false : true && event.keyCode == 110 ? false : true"  maxlength="15" autocomplete="off" required>
                                          </div>
                                       </div>
                                    </div>
                                    <div class="form-group">
                                       <label>Email Address</label>
                                       <input type="email" class="form-control" name="email_address" id="email" autocomplete="off" required>
                                    </div>
                                    <div class="form-group">
                                       <label>Home Address</label>
                                       <textarea class="form-control capitalize" name="home_address" id="home_address" rows="4" maxlength="150" autocomplete="off" required
                                          oninvalid="this.setCustomValidity('Please Enter your Address here')"
                                          oninput="this.setCustomValidity('')"></textarea>
                                    </div>
                                 </div>
                              </div>
                              <hr>
                              <div class="row">
                                 <div class="col-lg-4">
                                    <div class="form-group">
                                       <label>ID Number</label>
                                       <input type="number" class="form-control" name="idnumber" id="idnumber" onkeydown="javascript: return event.keyCode == 69 ? false : true && event.keyCode == 189 ? false : true && event.keyCode == 109 ? false : true && event.keyCode == 107 ? false : true && event.keyCode == 187 ? false : true && event.keyCode == 190 ? false : true && event.keyCode == 110 ? false : true"  aria-describedby="idnumber" required>
                                    </div>
                                 </div>
                                 <div class="col-lg-4">
                                    <div class="form-group">
                                       <label for="exampleInputEmail1">Department</label>
                                       <select class="form-control" name="department" id="department" required>
                                          <option value="">choose Department</option>
                                          <option value="1">Industrial Technology</option>
                                          <option value="2">Industrial Education</option>
                                          <option value="3">Electrical Engineering Technology</option>
                                          <option value="4">Civil Engineering Technology</option>
                                          <option value="5">Computer Science</option>
                                       </select>
                                    </div>
                                 </div>
                                 <div class="col-lg-4">
                                    <div class="form-group">
                                       <label for="exampleInputEmail1">Shift</label>
                                       <select class="form-control" name="shift" id="shift" required>
                                          <option value="">choose Shift</option>
                                          <option value="day">Day</option>
                                          <option value="night">Night</option>
                                       </select>
                                    </div>
                                 </div>
                                 <div class="col-12">
                                    <div class="form-group mt-3">
                                       <button class="btn btn-success" type="submit"> <i class="fas fa-fw fa-check"></i> CONFIRM</button>
                                    </div>
                                 </div>
                              </div>
                           </div>
                        </div>
                     </div>
               </form>
               </div>
            </div>
            <!-- End of Main Content -->
         </div>
         <!-- End of Content Wrapper -->
      </div>
