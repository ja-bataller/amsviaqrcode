      <a class="scroll-to-top rounded" href="#page-top">
      <i class="fas fa-angle-up"></i>
      </a>
      {{!-- partials footer --}}
      {{> _footer}}
      <script>
         // MAXIMUM DATE INPUT IS TODAY
         birthdate.max = new Date().toISOString().split("T")[0]
      </script>   
      <script>
         const form = document.querySelector("#registerNewUserForm");
         
         form.addEventListener('submit', async (e) => {
            e.preventDefault();
         
            // get values
            const firstname = form.firstname.value;
            const middlename = form.middlename.value;
            const lastname = form.lastname.value;
            const gender = form.gender.value;
            const age = form.age.value;
            const birthdate = form.birthdate.value;
            const number = form.contact_number.value;
            const email_address = form.email_address.value;
            const home_address = form.home_address.value;
            const idnumber = form.idnumber.value;
            const department = form.department.value;
            const shift = form.shift.value;

            const contact_number = `0${number}`;
            
            try {
               const res = await fetch('/register-qrcode', { 
               method: 'POST', 
               body: JSON.stringify({ firstname, middlename, lastname, gender, age, birthdate, contact_number, email_address, home_address, idnumber, department, shift }),
               headers: {'Content-Type': 'application/json'}
               });
               const data = await res.json();
               console.log(data);
               
               // if the login inputs is incorrect this will trigger
               if (data.errors) {
                  iziToast.error({
                  title: data.errors,
                  position: "topCenter",
                  timeout: 3000,  
                  });
               }
               else{
                  let = baseURl = 
                  location.assign(`/qrcode/${data.user._id}`);
               }
               }
            catch (err) {
               console.log(err);
            }
         });
      </script>
   </body>
