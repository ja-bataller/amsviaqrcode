<div class="modal fade" id="contactModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" data-backdrop="static" data-keyboard="false" aria-hidden="true">
   <div class="modal-dialog" role="document">
      <div class="modal-content">
         <div class="modal-header">
            <h3 class="modal-title" id="exampleModalLabel"> <i class="fas fa-envelope"></i> Contact Us</h3>
         </div>
         <div class="modal-body">
            <form>
               <div class="form-group">
                  <label for="title" class="col-form-label">Title:</label>
                  <input type="text" class="form-control" id="title" required>
               </div>
               <div class="form-group">
                  <label for="message" class="col-form-label">Message:</label>
                  <textarea class="form-control" name="" id="message" cols="30" rows="5"></textarea>
               </div>
               <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                  <button type="submit" id="sendEmail" class="btn btn-primary"><i class="fas fa-paper-plane"></i> Send</button>
               </div>
            </form>
         </div>
         
      </div>
   </div>
</div>